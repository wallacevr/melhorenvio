{
    "name": "fernandoebert/melhorenvio",
    "description": "API Melhor envio solutions for version php",
    "minimum-stability": "stable",
    "license": "proprietary",
    "authors": [
      {
        "name": "Fernando Ebert",
        "email": "fernandoebert@ebertsystem.com",
        "role": "Developer",
        "homepage": "https://ebertsystem.com"
      }
    ],
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5"
    },
    "autoload": {
        "psr-4": {
            "MelhorEnvio\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MelhorEnvio\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
